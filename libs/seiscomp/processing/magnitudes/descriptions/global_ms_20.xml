<?xml version="1.0" encoding="UTF-8"?>
<seiscomp>
	<plugin name="Ms_20">
		<extends>global</extends>
		<description>
		Surface wave magnitude measured at around 20 s
		</description>
	</plugin>
	<binding name="Ms_20" module="global">
		<description>
		The surface wave magnitude measured on the vertical component
		at around 20 s period.
		</description>
		<configuration>
			<extend-struct type="GlobalBindingsAmplitudeProfile" match-name="Ms_20">
				<description>
				Parameters for computing Ms_20 amplitudes.
				</description>
				<parameter name="minSNR" type="double" unit="s" default="0"/>
				<parameter name="minPeriod" type="double" unit="s" default="18"/>
				<parameter name="maxPeriod" type="double" unit="s" default="22"/>
				<parameter name="minDist" type="string" unit="deg" default="20"/>
				<parameter name="maxDist" type="string" unit="deg" default="160"/>
				<parameter name="minDepth" type="string" unit="km" default="0"/>
				<parameter name="maxDepth" type="string" unit="km" default="100"/>
				<parameter name="signalBegin" type="string" unit="s" default="max(OT + R / 4, -5)"/>
				<parameter name="signalEnd" type="string" unit="s" default="min(OT + R / 3, 3000)"/>
				<parameter name="minVelocity" type="double" unit="km/s" default="3">
					<description>
					Unused parameter. Consider signalEnd instead.
					Formerly used as minimum group velocity to compute the
					signal time window.
					</description>
				</parameter>
				<parameter name="maxVelocity" type="double" unit="km/s" default="4">
					<description>
					Unused parameter. Consider signalBegin instead.
					Formerly used as maximum group velocity to compute the
					signal time window.
					</description>
				</parameter>
			</extend-struct>
			<extend-struct type="GlobalBindingsMagnitudeProfile" match-name="Ms_20">
				<parameter name="minSNR" type="double" unit="s" default="0"/>
				<parameter name="minPeriod" type="double" unit="s" default="18"/>
				<parameter name="maxPeriod" type="double" unit="s" default="22"/>
				<parameter name="minDist" type="string" unit="deg" default="20"/>
				<parameter name="maxDist" type="string" unit="deg" default="160"/>
				<parameter name="minDepth" type="string" unit="km" default="0"/>
				<parameter name="maxDepth" type="string" unit="km" default="100"/>
				<parameter name="lowerPeriod" type="double" unit="s" default="18">
					<description>
					Unused parameter. Consider minPeriod instead.
					</description>
				</parameter>
				<parameter name="upperPeriod" type="double" unit="s" default="22">
					<description>
					Unused parameter. Consider maxPeriod instead.
					</description>
				</parameter>
			</extend-struct>
		</configuration>
	</binding>
</seiscomp>
